<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DoctorApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DoctorApp" parent="Base.Theme.DoctorApp">
        <item name="android:statusBarColor">@color/main_color</item>

    </style>

    <style name="birthdayUpper">
        <item name="android:textColor">@color/grayscale2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="birthdayLower">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@drawable/bor_black_8</item>

        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="signEdit">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColorHint">@color/grayscale2</item>
        <item name="android:background">@drawable/edit_selector</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="otpEdit">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColorHint">@color/grayscale2</item>
        <item name="android:background">@drawable/edit_selector</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="radio_home">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/white_bg_8</item>
        <item name="android:backgroundTint">@color/radio_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/radio_text_selector</item>
    </style>

    <style name="custom_toolbar_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="page_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="custom_toolbar_sub_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="back_toolbar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>


    <style name="doctor_detail_hint">
        <item name="android:textColor">@color/grayscale2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="doctor_detail_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/edit_bg_8</item>
        <item name="android:backgroundTint">@color/grayscale4</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical" tools:targetApi="o">12sp</item>
    </style>

    <style name="splashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_logo_main_round</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@mipmap/ic_logo_main_round</item>
<!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item> &lt;!&ndash;Transparent StatusBar&ndash;&gt;-->
<!--        <item name="android:windowTranslucentNavigation">true</item> &lt;!&ndash;Transparent Navigation&ndash;&gt;-->
        <item name="windowSplashScreenAnimationDuration">1000</item> <!--Transparent Navigation-->
        <item name="postSplashScreenTheme">@style/Theme.DoctorApp</item> <!--Transparent Navigation-->
    </style>




</resources>